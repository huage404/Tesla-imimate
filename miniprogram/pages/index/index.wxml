<view class="page">
  <view class="swiper">
    <swiper bindchange="onSwiperChange">
      <swiper-item wx:for="{{swiperItems}}" wx:key="index">
        <image src="{{item.imageUrl}}" mode="aspectFill" />
      </swiper-item>
    </swiper>
    <view class="swiper-float-content">
      <view 
        class="title"
        wx:for="{{swiperItems}}"
        wx:key="index"
        wx:if="{{ index === currentSwiperIndex }}"
      >
        {{ item.title }}
      </view>

      <view
        class="descriptions-area"
        wx:for="{{swiperItems}}"
        wx:key="index"
        wx:if="{{ currentSwiperIndex === index }}"
      >
        <view
          class="description"
          wx:for="{{ item.config }}"
          wx:key="index"
        >
          <view class="description-title">
            {{ item.title }}
          </view>
          <view class="description-subtitle">
            {{ item.subtitle }}
          </view>
        </view>
      </view>

      <view class="action-btn">
        预约试驾
      </view>

      <view class="view-config">
        查看参数
      </view>

      <view class="swiper-dots">
        <view wx:for="{{swiperItems}}" wx:key="index" class="dot {{ currentSwiperIndex !== index || 'active' }}"></view>
      </view>
    </view>
  </view>
</view>